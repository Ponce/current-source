#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi

export VERSION=2.08

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
cd $TMP
rm -rf slacktrack
tar xvf $CWD/slacktrack-$VERSION-source.tar.xz
cd slacktrack || exit 1

# Start the "real" SlackBuild:
./slacktrack.SlackBuild
